root = true

[*]
tab_width = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{c,cc,cpp,h,hpp}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2
